<div class="container">
  <div>
    <a href="/admin-dashboard" class="link-offset-2 link-underline link-underline-opacity-0">Go to Dashboard</a>
  </div>
{{#if errors }}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong> Fix errors </strong> 
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/if}}
  <div class="mt-2 h-100 d-flex align-items-center justify-content-center" >
    <form method="post" enctype="multipart/form-data">
      <div class="row mb-4">
          <div class="form-outline">
              <input value="{{values.name}}" type="text" class="form-control {{validateInput 'name'}}" name="name" id="name" placeholder="Brand Name" required/>
              {{validationFeedback 'name'}}
          </div>
          <div class="form-outline mb-4">
          <input value="{{values.uploaded_file}}" type="file" class="form-control {{validateInput 'uploaded_file'}}" name="uploaded_file" id="file" placeholder="File" required/>
          {{validationFeedback 'uploaded_file'}}
          </div>
      <button type="submit" class="btn-primary form-control mb-4 btn btn-info">Add Car</button> 
    </form>
  </div>
</div>
