<div class="container">
    <div class="row bg-white mt-5 border border-primary p-2 rounded ms-4 me-5">
        <div class="col-lg-2 col-sm-5 mt-2"><p class="fw-bold p-0 m-0">Pick-Up Date:</p><p>{{startDate}}</p></div>
        <div class="col-lg-1 col-sm-2 mt-3"><p class="fw-bold">></p></div>
        <div class="col-lg-2 col-sm-5 mt-2 float-start"><p class="fw-bold p-0 m-0">Drop-Off Date:</p><p>{{endDate}}</p></div>
        <div class="col-lg-7 col-sm-10"><a href="/" class="btn bg-primary text-white rounded me-5 mt-3 date_edit_btn"  role="button">Edit</a></div>
    </div>
    <div class="row mt-3 ms-3">
        <div class="col-lg-12 col-sm-5 mt-5 car_type text-center">   
            <form action="" method="get">
                {{#each cartypes}}
                    <a href="/cars/type/{{id}}" class="btn bg-primary text-white rounded  me-5" role="button" autocomplete="off">{{name}}</a>
                {{/each}}        
            </form>
        </div>  
    </div>
    <div class="row justify-content-center mt-5 d-flex">
        {{#each cars}}
        <div class="col-lg-3 col-sm-3 bg-white car_card mb-5 flex-wrap">
            <div class="d-flex mt-4">
                <h6 class="w-75">{{brand.name}} - {{model}}</h6>
                <img class="ms-5" src="./img/save_icon.png" class="save_icon" width="20px" height="20px" alt="">              
            </div>
            <div class="mt-1">
                <img src="{{thumbnail}}" class="mb-4" width="326px" height="93px" alt="">
                <h6>${{hourlyPrice}}/day</h6>
                <p><b>{{carTypeId}} carType</b></p>
            </div>
            <div class="d-flex flex-wrap">
                <div class="mb-3 w-50">
                    <div class="d-flex mb-2 w-75">
                        <img src="./img/user-6-24.png" class="me-2 border border-primary rounded h-25 p-2" alt="">
                        <p class="mt-2">{{seats}} Seats</p>
                    </div>
                    <div  class="d-flex  mb-2">
                        <img src="./img/gear_shift-24.png" class="me-2 border border-primary rounded h-25 p-2" alt="">
                        <p class="mt-2 ">{{transmission}}</p>
                    </div>
                </div>
                <div class="mb-3 w-50">
                    <div  class="d-flex me-5 mb-2">
                        <img src="./img/hp-icon.png" class="me-2 border border-primary rounded h-25 p-2" alt="">
                        <p class="mt-2">{{hp}} HP</p>
                    </div>
                    <div class="d-flex mb-2">
                        <img src="./img/fuel-2-24.png" class="me-2 border border-primary rounded h-25 p-2" alt="">
                        <p class="mt-2">{{fuel}}</p>
                    </div>
                </div>  
            </div>
            <a href="/cars/{{id}}" class="btn w-100 bg-primary text-white rounded mb-3" role="button"><h6 class="mt-1">Car Detail</h6></a>
            <a href="/cars/order/{{id}}" class="btn w-100 bg-primary text-white rounded mb-3" role="button"><h6 class="mt-1">View Deal</h6></a>  
        </div>
        {{/each}} 
    </div>
</div>