<div class="container">
  <a href="/" class="link-offset-2 link-underline link-underline-opacity-0">Go to Home Page</a>
  {{#if errorMessage }}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong> {{errorMessage}} </strong> 
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {{/if}}
    <div class="d-flex flex-row bd-highlight align-items-center justify-content-center  ">
        <div class="m-5 pb-1 bd-highlight ">
          <a href="/users/login" class="link-offset-2 link-underline link-underline-opacity-0" >
          <h4 class="text-danger">Login</h4>
          </a>
        </div>
        <div class="m-5 pb-1 bd-highlight">
            <a href="/users/sign-up" class="link-offset-2 link-underline link-underline-opacity-0" >
            <h4 >Sign</h4>
            </a>
        </div>
      </div>
      <div class="mt-2 h-100 d-flex align-items-center justify-content-center">   
        <form method="post">
          <div class="form-outline mb-4">
            <input value="{{values.email}}"  name="email" id="email" class="form-control {{validateInput 'email'}}" placeholder="Email or username" required/>
            {{validationFeedback 'email'}}
          </div>
          <div class="form-outline mb-4">
            <input value="{{values.password}}" type="password" name="password" id="password" class="form-control {{validateInput 'password'}} " placeholder="Password" required/>
            {{validationFeedback 'password'}}
          </div>
          <div class="form-outline mb-4">
              <button type="submit" class="form-control btn btn-info">Login</button>
          </div>   
      </form>
    </div>
</div>

